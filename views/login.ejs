<%- include('layouts/header') -%>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card p-2">
        <div class="card-body">
          <h2 class="card-title text-center"><i class="fas fa-sign-in-alt"></i> Login</h2>
          <!-- Flash message -->
          

          <form method="POST" action="/">
            <fieldset>
              <div class="form-group">
                <label for="email-address">Email address:</label>
                <input type="text" class="form-control" id="email-address" placeholder="Email...">
              </div>
              <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" placeholder="Password...">
              </div>
              <button class="btn btn-block btn-primary">Login</button>
            </fieldset>
          </form>
          
          <p class="mt-2 text-muted">Not have an account yet? Let's <a href="/users/register">create</a> one</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layouts/footer') -%>